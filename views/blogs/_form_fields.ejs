<div>
  <label>Title</label>
  <input type="text" name="title" value="<%= blog.title %>">
</div>
<div>
  <label>Author</label>
  <select name="author">
    <% authors.forEach(author => { %>
    <% if (author.id === blog.author) { %>
    <option selected label="<%= author.name %>" value="<%= author.id %>">
      <% } else { %>
    <option label="<%= author.name %>" value="<%= author.id %>">
      <% } %>
      <% }) %>
  </select>
</div>
<div>
  <label>Views</label>
  <h3><%= blog.views %></h3>
</div>
<div>
  <label>Likes</label>
  <h3><%= blog.likes %></h3>
</div>
<div>
  <label>Cover</label>
  <input type="file" name="cover" class="filepond">
</div>
<div>
  <label>Content</label>
  <textarea name="content"><%= blog.content %></textarea>
</div>